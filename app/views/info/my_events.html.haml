.section-header
  %h1.title-section My Events
  / Events owned by Users
  / Should show up regardless of going status

.container
  -# NEXT UPCOMING EVENT PANEL
  .col-xs-3
    %h3.title-section{:style => "font-size:24px; color:black;"}
      Upcoming Next
    .panel.panel-default
      <!--Heading-->
      .panel-heading.panel-title
        #nearest-event-title
          = link_to @nearest_event.name, @nearest_event
          %br/
          - if @nearest_event.user == current_user && current_user != nil
            .glyphicon.glyphicon-flag
      <!--Body-->
      .panel-body.main
        = @nearest_event.city
        = @nearest_event.state
        %h4.event-date
          = @nearest_event.date.strftime("%b %d")
        %p
          = @nearest_event.date.strftime("%Y")
        = @nearest_event.dance_style
        = @nearest_event.event_type
      <!--Bottom-->
      .panel-heading.panel-bottom
        - if @nearest_event.event_image
          .footer-with-icon
            = image_tag attachment_url(@nearest_event, :event_image), class: "img-responsive event-image-thumbnail"
  %br/
  .col-xs-9
    = render partial: "events/panel_tile"
